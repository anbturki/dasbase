{
  "name": "server",
  "version": "1.0.0",
  "main": "index.js",
  "author": "Barakat Turki <barakat.turki@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "start": "NODE_ENV=production node ./dist/app.js",
    "dev": "ts-node-dev --respawn --transpileOnly ./src/app.ts",
    "nodemon": "nodemon --watch ./src/**/*.ts --exec 'ts-node ./src/app.ts'",
    "lint": "tslint --project tsconfig.json",
    "prettier:base": "prettier --parser typescript --single-quote",
    "prettier:check": "yarn prettier:base  --list-different \"src/**/*.{ts,tsx}\"",
    "prettier:write": "yarn prettier:base --write \"src/**/*.{ts,tsx}\""
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn prettier:write"
    }
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.3",
    "@types/jsonwebtoken": "^8.3.8",
    "@types/node": "^8.0.29",
    "husky": "^4.2.3",
    "prettier": "^2.0.2",
    "ts-node": "3.3.0",
    "ts-node-dev": "^1.0.0-pre.44",
    "tslint": "^6.1.0",
    "tslint-config-airbnb": "^5.11.2",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "3.3.3333"
  },
  "dependencies": {
    "@types/cookie-parser": "^1.4.2",
    "bcrypt": "^4.0.1",
    "body-parser": "^1.19.0",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.12.0-rc.0",
    "cookie-parser": "^1.4.5",
    "dotenv": "^8.2.0",
    "envalid": "^6.0.1",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "pg": "^7.18.2",
    "reflect-metadata": "^0.1.10",
    "typeorm": "0.2.24"
  }
}
